syntax enable
" tabstops (numder of spaces)
set ts=2
" when indenting in visual mode, match the tabstops above
set shiftwidth=2
set nu
" expand tabs to spaces
set expandtab
set autoindent
" shows a visual cursor line under current line - handy when one line spans several visual lines
" set cursorline
" match braces [] {} ()
set showmatch
" python specific highlighting
let python_highlight_all=1
